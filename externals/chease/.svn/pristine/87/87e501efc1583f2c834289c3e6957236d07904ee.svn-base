#!/bin/sh

if [ $# -le 1 -o $# -ge 3 ]
then
   echo "need 2 arguments: o.chease_outputfile o.cols.chease_outputfile"
   exit
fi

cheaseoutputfile=$1
cols_output=$2

a1=`which o.chease_to_cols`
bb='x'$a1
#echo $bb
if [ $bb = 'x' ]
then
  echo "needs o.chease_to_cols in the path and file o.chease_to_cols_v10.pl in the same directory"
else
 aa=`dirname $a1`
 #echo $aa
  $aa/o.chease_to_cols_v10.pl $cheaseoutputfile > $cols_output
fi

