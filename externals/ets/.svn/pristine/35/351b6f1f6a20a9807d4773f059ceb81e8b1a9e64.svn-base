<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <!-- document element -->
  <xs:element name="parameters">
    <xs:annotation>
      <xs:documentation>
        GLOBAL: parameters for solver_test
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="output" maxOccurs="1"/>
        <xs:element ref="dims" maxOccurs="1"/>
        <xs:element ref="solver" maxOccurs="1"/>
        <xs:element ref="boundary" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <!-- output parameters -->
  <xs:element name="output">
    <xs:annotation>
      <xs:documentation>
        BLOCK: specify output CPO options
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
         <xs:element ref="shot" maxOccurs="1"/>
         <xs:element ref="run" maxOccurs="1"/>
         <xs:element ref="db" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="shot" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        shot number
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="run" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        run number
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="db" type="xs:string">			
    <xs:annotation>
      <xs:documentation>
        output database format (mdsplus or hdf5) [default: mdsplus]
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <!-- dims parameters -->
  <xs:element name="dims">
    <xs:annotation>
      <xs:documentation>
        BLOCK: specify the dimensions
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
         <xs:element ref="nrho" maxOccurs="1"/>
         <xs:element ref="nion" maxOccurs="1"/>
         <xs:element ref="nimp" maxOccurs="1"/>
         <xs:element ref="nzimp" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="nrho" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        NRHO,  number of radial points
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="nion" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        NION,  number of ions
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="nimp" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        NIMP,  number of impurity types
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="nzimp" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        MAX_NZIMP, number of impurity ionisation states
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <!-- solver parameters -->
  <xs:element name="solver">
    <xs:annotation>
      <xs:documentation>
        BLOCK: specify parameters for the solver
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="solver_type" maxOccurs="1"/>
        <xs:element ref="sigma_source" maxOccurs="1"/>
        <xs:element ref="tau" maxOccurs="1"/>
        <xs:element ref="amix" maxOccurs="1"/>
        <xs:element ref="convrec" maxOccurs="1"/>
        <xs:element ref="ntime" maxOccurs="1"/>
        <xs:element ref="nsol" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="solver_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        choice of numerical solver
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="sigma_source" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        option for origin of Plasma electrical conductivity: 0: plasma collisions; 1: transport module; 2: source module
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="tau" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        TAU, time step [s]
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="amix" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        AMIX, mixing factor
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="convrec" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        PRECISION
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="ntime" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        NTIME, number of time points
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="nsol" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Number of analytical example
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <!-- boundary parameters -->
  <xs:element name="boundary">
    <xs:annotation>
      <xs:documentation>
        BLOCK: specify parameters for the boundary condition
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="psi_bnd_type" maxOccurs="1"/>
        <xs:element ref="ni_bnd_type" maxOccurs="1"/>
        <xs:element ref="ti_bnd_type" maxOccurs="1"/>
        <xs:element ref="te_bnd_type" maxOccurs="1"/>
        <xs:element ref="vtor_bnd_type" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="psi_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Type of boundary conditions CURRENT
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="ni_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Type of boundary conditions ION DENSITY
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="ti_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Type of boundary conditions ION TEMPERATURE
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="te_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Type of boundary conditions ELECTRON TEMPERATURE
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="vtor_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        Type of boundary conditions ROTATION
      </xs:documentation>
    </xs:annotation>
  </xs:element>

</xs:schema>
