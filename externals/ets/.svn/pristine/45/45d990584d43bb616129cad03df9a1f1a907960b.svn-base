<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <!-- document element -->
  <xs:element name="parameters">
    <xs:annotation>
      <xs:documentation>
        GLOBAL: parameters for neutrals
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="boundary_conditions" maxOccurs="1"/>
        <xs:element ref="coefficients" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <!-- boundary conditions -->
  <xs:element name="boundary_conditions">
    <xs:annotation>
      <xs:documentation>
        BLOCK: specify boundary conditions
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="n0_bnd" maxOccurs="1"/>
        <xs:element ref="t0_bnd" maxOccurs="1"/>
        <xs:element ref="neu_bnd_type" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="n0_bnd" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        boundary condition for n0
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="t0_bnd" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        boundary condition for t0
      </xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:element name="neu_bnd_type" type="xs:integer">
    <xs:annotation>
      <xs:documentation>
        neutral boundary condition type
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <!-- coefficients -->
  <xs:element name="coefficients">
    <xs:annotation>
      <xs:documentation>
        BLOCK: coefficients
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>
        <xs:element ref="coef_recycle" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="coef_recycle" type="xs:float">
    <xs:annotation>
      <xs:documentation>
        recycling coefficient
      </xs:documentation>
    </xs:annotation>
  </xs:element>


</xs:schema>
