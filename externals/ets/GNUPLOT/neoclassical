#! /bin/tcsh

cp /dev/null neoclassical.gnuplot

echo "set term postscript color solid 24" >> neoclassical.gnuplot
echo "set out 'neoclassical.ps'" >> neoclassical.gnuplot
echo "" >> neoclassical.gnuplot
echo "set xrange [1e-3:]" >> neoclassical.gnuplot

set c=1

foreach i (sigma jboot ne_neo%diff_eff ne_neo%vconv_eff te_neo%diff_eff te_neo%vconv_eff)
  @ c += 1
  echo "" >> neoclassical.gnuplot
  echo "set title '$i'" >> neoclassical.gnuplot
  echo "plot 'neo.dat' using 1:$c title 'nclass', 'neowes.dat' using 1:$c title 'neowes'" >> neoclassical.gnuplot
end

set F=`head -1 neo.dat | awk '{print $3}'`

foreach i (ni_neo%diff_eff ni_neo%vconv_eff ti_neo%diff_eff ti_neo%vconv_eff)
  foreach j (`echo 1 $F | awk '{for (i=$1;i<=$2;i++) print i}'`)
    @ c += 1
    echo "" >> neoclassical.gnuplot
    echo "set title '$i : $j'" >> neoclassical.gnuplot
    echo "plot 'neo.dat' using 1:$c title 'nclass', 'neowes.dat' using 1:$c title 'neowes'" >> neoclassical.gnuplot
  end
end

gnuplot neoclassical.gnuplot
