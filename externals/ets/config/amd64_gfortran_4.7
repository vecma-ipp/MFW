GOT_PERFLIB = 'yes'
FC=gfortran -fPIC -fno-second-underscore -ffree-line-length-none -J${OBJECTCODE}
FCOPTS=-g
MOD=mod
LIBS += -llapack -lblas
INCLUDE=
DEFINES += -DUAL

AMNS=yes
ifeq ($(AMNS),yes)
INCLUDE  += ${shell eval-pkg-config --cflags amns-gfortran}
LIBS     += ${shell eval-pkg-config --libs amns-gfortran}
endif

CJK=yes
ifeq ($(CJK),yes)
endif

ITMTYPES=yes
ifeq ($(ITMTYPES),yes)
INCLUDE  += ${shell eval-pkg-config --cflags itmtypes-gfortran}
LIBS     += ${shell eval-pkg-config --libs itmtypes-gfortran}
endif

ITMCONSTANTS=yes
ifeq ($(ITMCONSTANTS),yes)
INCLUDE  += ${shell eval-pkg-config --cflags itmconstants-gfortran}
LIBS     += ${shell eval-pkg-config --libs itmconstants-gfortran}
endif

XMLLIB=yes
ifeq ($(XMLLIB),yes)
INCLUDE  += ${shell eval-pkg-config --cflags xmllib-amd64_gfortran_4.7}
LIBS     += ${shell eval-pkg-config --libs xmllib-amd64_gfortran_4.7}
endif

UAL=yes
ifeq ($(UAL),yes)
  INCLUDE += ${shell eval-pkg-config --cflags ual-gfortran}
  LIBSCHEMAS =
  LIBS += ${shell eval-pkg-config --libs ual-gfortran}
endif

LIBS += ${shell eval-pkg-config --libs lapack-amd64_gfortran_4.7 blas-amd64_gfortran_4.7}
